@model archive.Models.CreateCourseModel
@{
    ViewData["Title"] = "Nowy przedmiot";
}

<h2>@Html.DisplayNameFor(model => model)</h2>
<hr/>

<div class="row">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" required/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ShortcutCode"></label>
            <textarea asp-for="ShortcutCode" class="form-control"></textarea>
            <span asp-validation-for="ShortcutCode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Dodaj" class="btn btn-primary"/>
        </div>
    </form>
</div>

