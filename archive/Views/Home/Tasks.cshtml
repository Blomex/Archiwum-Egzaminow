@model TasksViewModel

<h1>@Model.CourseName</h1>
<h1>@Model.TasksetName - @Model.TasksetYear</h1>

@foreach (var task in Model.Tasks)
{
    <article class="card">
        <div class="card-body">
            <h3>@task.Name </h3>
            <pre style="white-space: pre-wrap; word-wrap: break-word;">@task.Content</pre>
            <a href="/solution/create/@task.Id">Dodaj rozwiązanie</a>
        </div>
    </article>
    
    foreach (var solution in task.Solutions)
    {
        // FIXME copy & paste
        <article>
            <section>
                <p><em>Rozwiązanie:</em></p>
                <pre style="margin-left: 5mm; white-space: pre-wrap; word-wrap: break-word;">
                    @solution.Content
                </pre>
            </section>
        </article>
    }
}