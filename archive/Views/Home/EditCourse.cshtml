@model archive.Models.EditCourseModel
@{
    ViewData["Title"] = "Edycja nazwy przedmiotu";
}

<h2>@Html.DisplayNameFor(model => model)</h2>
<hr/>
<div class="row">
    <form asp-controller="Home" asp-action="EditCourse">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
       
        <div class="form-group">
          <label asp-for="CourseId"></label>
            <select asp-for="CourseId" asp-items="Model.Courses" class="form-control"></select>
            <span asp-validation-for="CourseId" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" required/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="ZmieÅ„" class="btn btn-primary"/>
        </div>
    </form>
</div>

