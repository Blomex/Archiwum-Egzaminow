@model archive.Models.ArchiveCourseModel
@{
    ViewData["Title"] = "Odarchwizacja przedmiotu";
}

@if(Model.Courses.Any()){
<h2>Odarchiwizuj przedmiot</h2>
<hr/>
<div class="row">
    <form asp-controller="Home" asp-action="UnarchiveCourse">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
       
        <div class="form-group">
          <label asp-for="CourseId"></label>
            <select asp-for="CourseId" asp-items="Model.Courses" class="form-control"></select>
            <span asp-validation-for="CourseId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Odarchiwizuj" class="btn btn-primary"/>
        </div>
    </form>
</div>
}
else{
    <h2>Nie ma przedmiot√≥w do Odarchwizowania.</h2>
}
