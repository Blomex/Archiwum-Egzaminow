@model archive.Models.SolutionViewModel
@{
    ViewData["Title"] = "FIXME?";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Model.Task.Name</h1>
<section>
    <pre style="white-space: pre-wrap; word-wrap: break-word;">@Model.Task.Content</pre>
</section>
<h2>Dodaj rozwiązanie</h2>
<div>
    <div>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Solution.Id" />
            <input type="hidden" asp-for="Solution.TaskId" />
            <div class="form-group">
                <label asp-for="Solution.Content" class="control-label">Treść rozwiązania</label>
                <textarea asp-for="Solution.Content" class="form-control" cols="120" rows="20" autofocus></textarea>
                <span asp-validation-for="Solution.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
