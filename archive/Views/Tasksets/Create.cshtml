@model archive.Models.CreateTasksetViewModel
@{
    ViewData["Title"] = "Nowy zbior zadań";
}

<h4>@Html.DisplayNameFor(model => model)</h4>
<hr/>
<div class="row">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Type"></label>
            <select asp-for="Type" asp-items="Model.Types" class="form-control"></select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Year"></label>
            <input asp-for="Year" class="form-control" value="2019"/> <!-- FIXME -->
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CourseId"></label>
            <select asp-for="CourseId" asp-items="Model.Courses" class="form-control"></select>
            <span asp-validation-for="CourseId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Utwórz" class="btn btn-primary"/>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}